# NextAuth.js Configuration
# Generate a random secret: openssl rand -base64 32
AUTH_SECRET=your-secret-key-here-generate-with-openssl

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=your-google-client-id.apps.googleusercontent.com
AUTH_GOOGLE_SECRET=your-google-client-secret

# GitHub OAuth Credentials  
# Get these from: https://github.com/settings/developers
AUTH_GITHUB_ID=your-github-client-id
AUTH_GITHUB_SECRET=your-github-client-secret

# NextAuth URL (for production, change to your domain)
NEXTAUTH_URL=http://localhost:3000

# Firebase Client Configuration (Public - safe to expose)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK (Server-side only - KEEP SECRET)
# These are used by NextAuth FirestoreAdapter
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# Google Analytics ID
NEXT_PUBLIC_ANALYTICS_ID=your-google-analytics-id

# Cron Secret for Trending Jobs
CRON_SECRET="0Jvr9lTW1+ueHDl1fMSxTtZ3aswJB2UPTPSegocE5to="

# OpenRouter API Key
OPENROUTER_API_KEY="your-openrouter-api-key"

# Base URL for SEO and absolute URLs (used in sitemap, OG tags, etc.)
# For development: http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000